<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:id="@+id/ll_weather_basic_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp">
		<TextView
			android:id="@+id/tv_weather_area_name"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:textSize="38sp"
			android:textColor="@color/weatherTextColor"/>
		<ImageButton
			android:id="@+id/ib_weather_locate"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_toEndOf="@id/tv_weather_area_name"
			android:layout_marginStart="20dp"
			android:layout_centerVertical="true"
			android:background="@drawable/locate"
			android:contentDescription="@string/weather_locate"/>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_gravity="center_horizontal"
		android:orientation="vertical">
		<TextView
			android:id="@+id/tv_weather_now"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:textSize="15sp"
			android:textColor="@color/weatherTextColor"/>
		<TextView
			android:id="@+id/tv_weather_temperature_now"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:textSize="50sp"
			android:textColor="@color/weatherTextColor"/>
	</LinearLayout>

   

</LinearLayout>
